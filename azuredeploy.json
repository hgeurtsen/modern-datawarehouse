{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "companyName": {
            "type": "string",
            "metadata": {
                "description": "The name of the company"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": ["dev","test","acc","prod"],
            "metadata": {
                "description": "The name of the environment"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location where the resources should be deployed"
            }
        },
        "templateBaseUri": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/wmeints/modern-datawarehouse/master/",
            "metadata": {
                "description": "The GIT repository the templates are stored in"
            }
        }
    },
    "variables": {
        "resourceGroupName": "[concat(toLower(parameters('companyName')),'-dwh-', toLower(parameters('environment')))]",
        "namingConventionTemplate": "[concat(parameters('templateBaseUri'), 'shared/naming-convention.json')]",
        "dataFactoryTemplate": "[concat(parameters('templateBaseUri'), 'resources/data-factory.json')]",
        "databricksWorkspaceTemplate": "[concat(parameters('templateBaseUri'), 'resources/databricks-workspace.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2018-05-01",
            "location": "[parameters('location')]",
            "name": "[variables('resourceGroupName')]"
        },
        {
            "name": "dataFactoryName",
            "apiVersion": "2018-05-01",
            "type": "Microsoft.Resources/deployments",
            "location": "[parameters('location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('namingConventionTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "companyName": {
                        "value": "[parameters('companyName')]"
                    },
                    "resourceTypeAbbreviation": {
                        "value": "adf"
                    },
                    "environment": {
                        "value": "[parameters('environment')]"
                    }
                }
            }
        },
        {
            "name": "databricksWorkspaceName",
            "apiVersion": "2018-05-01",
            "type": "Microsoft.Resources/deployments",
            "location": "[parameters('location')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('namingConventionTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "companyName": {
                        "value": "[parameters('companyName')]"
                    },
                    "resourceTypeAbbreviation": {
                        "value": "bricks"
                    },
                    "environment": {
                        "value": "[parameters('environment')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "analyticsDeployment",
            "resourceGroup": "[variables('resourceGroupName')]",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/resourceGroups/', variables('resourceGroupName'))]"
            ],
            "properties":{
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "name": "dataFactoryTemplate",
                            "type": "Microsoft.Resources/deployments",
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('dataFactoryTemplate')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "dataFactoryName": "[reference('dataFactoryName').outputs.resourceName.value]",
                                    "location": "[resourceGroup().location]"
                                }
                            }
                        },
                        {
                            "name": "databricksTemplate",
                            "type": "Microsoft.Resources/deployments",
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('databricksWorkspaceTemplate')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "workspaceName": "[reference('databricksWorkspaceName').outputs.resourceName.value]",
                                    "location": "[resourceGroup().location]"
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}